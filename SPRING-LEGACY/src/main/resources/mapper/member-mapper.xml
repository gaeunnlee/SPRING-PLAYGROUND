<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.crud_ex.mapper.MemberMapper">

    <select id="findAll" resultType="org.crud_ex.domain.MemberVO">
        SELECT * FROM member
    </select>

    <select id="findByUserno" parameterType="int" resultType="org.crud_ex.domain.MemberVO">
        SELECT * FROM member WHERE userno = #{userno}
    </select>

    <select id="findByEmail" parameterType="string" resultType="org.crud_ex.domain.MemberVO">
        SELECT
            userno,
            email,
            password_hash AS passwordHash,
            name,
            age,
            status
        FROM member
        WHERE email = #{email}
    </select>

    <insert id="insert" parameterType="org.crud_ex.domain.MemberVO" useGeneratedKeys="true" keyProperty="userno">
        INSERT INTO member(email, password_hash, name, age, status)
        VALUES(#{email}, #{passwordHash}, #{name}, #{age}, 'ACTIVE')
    </insert>

    <update id="update" parameterType="org.crud_ex.domain.MemberVO">
        UPDATE member
        SET name = #{name},
            age  = #{age}
        WHERE userno = #{userno}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM member WHERE userno = #{userno}
    </delete>

</mapper>
